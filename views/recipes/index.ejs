<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Bangers&family=Press+Start+2P&display=swap" rel="stylesheet">
    <title>Foodie.js</title>
</head>
<body>
    <%- include('../partials/header') %>
      <thead>
      <h1>foodie.js</h1>
          </thead>
      <tbody class="recipes-preview" table style="background-color: lightgoldenrodyellow">
        <% recipes.forEach(function(r) { %>
          <tr>
            <td>
              <h2 style="font: 15px"><%= r.title %></h2>
              <h3><%= r.ingredients %></h3>
              <br>
              <button id="instructions"><a id="button" href="/recipes/<%= r._id %>">Instructions</a></button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    
    <%- include('../partials/footer') %>

</body>
</html>

